#! /usr/bin/env bash

set -e

bin/bootstrap

if [ ! -d _includes/ ]; then
  mkdir _includes/
fi
if [ ! -f _includes/tailwind.config.js ]; then
  echo "==> Running \`yarn run tailwind init _includes/tailwind.config.js --no-comments \`"
  yarn run tailwind init _includes/tailwind.config.js --no-comments
fi
